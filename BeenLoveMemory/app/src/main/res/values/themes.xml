<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeenLoveMemory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
        <item name="android:itemTextAppearance">@style/CustomMenuTextAppearance</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="WindowTransition">
        <item name="android:activityOpenEnterAnimation">@anim/act_pull_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/act_push_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/act_pull_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/act_push_out_right</item>
    </style>

    <style name="SelectableItemBackgroundBorderlessDark">
        <item name="android:theme">@style/SelectableItemThemesDark</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableItemBackgroundBorderlessLight">
        <item name="android:theme">@style/SelectableItemThemeLight</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableItemThemesDark">
        <item name="colorControlHighlight">@color/color_26000000</item>
    </style>

    <style name="SelectableItemThemeLight">
        <item name="colorControlHighlight">@color/color_1AFFFFFF</item>
    </style>

    <style name="SelectableMyVideoThemeLight">
        <item name="colorControlHighlight">@color/color_1AFFFFFF</item>
        <item name="colorControlNormal">@color/color_161518</item>
    </style>

    <style name="SelectableItemBackgroundLight">
        <item name="android:theme">@style/SelectableMyVideoThemeLight</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="CustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/color_343a40</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup</item>
        <item name="android:popupElevation">15dp</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/color_B4B4B4</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/color_B4B4B4</item>
    </style>

    <style name="PopupWindow" parent="@android:style/Widget.PopupWindow">
        <item name="android:popupBackground">@drawable/radius_white_dialog_10_popup</item>
    </style>
</resources>